{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "no-console": [
      "error",
      {
        "allow": ["log"]
      }
    ],
    "no-multi-spaces": [
      "error",
      { "exceptions": { "ImportDeclaration": true } }
    ]
  },
  "globals": {
    "__dirname": true,
    "process": true
  }
}
